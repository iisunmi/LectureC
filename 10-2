#include <stdio.h>
#include "turboc.h"
//#이 가로로 사라졌다가 다시 시작위치에서 반복되도록 수정하라
//#이 오른쪽끝으로 갔다가 왼쪽으로 가도록 왕복하도록 바꾸어라
//#이 반사되도록 만들라
//힌트 : x,y값 모두를 변화시키면 됨


int main(void) {

	setcursortype(NOCURSOR); //NO 커서

	int a = 1; // 기울기변경
	int b = 0; // y축을 따라 직선이 이동한다
	int x = 0;
	int y = (a * x) + b;

while(1){
	for (x = 0; x <= 80; x++) {


		//clrscr(); //전체 화면 지우기 //이전에 출력한걸 지워주는 함수
		gotoxy(x, 3);
		puts("#"); //한 글자만 출력
		delay(20);
		gotoxy(x, 3);
		puts("  ");

	}


	for (x = 80; x >= 0; x--) {
		y = (a * x) + b;

		//clrscr(); //전체 화면 지우기 //이전에 출력한걸 지워주는 함수
		gotoxy(x, 3);
		puts("#"); //한 글자만 출력
		delay(20);
		gotoxy(x, 3);
		puts("  ");

	}

}



	return 0;
}









